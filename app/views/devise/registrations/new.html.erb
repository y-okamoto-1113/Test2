

<div class="middle-box text-center loginscreen  animated fadeInDown">
<div>
<div> <h1 class="logo-name">IN+</h1> </div>
<h3>Welcome to IN+</h3>
<p>
    Perfectly designed and precisely prepared admin theme with over 50 pages with extra new web app views.
</p>
<p>Login in. To see it in action.</p>



  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :name, "名前" %><br />
      <%= f.email_field :name, autofocus: true, autocomplete: "name", class:'form-control', required:"" %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control', required:"" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:'form-control', required:"" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, 'ログインを記憶' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class:'btn btn-success' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>


</div>
</div>
